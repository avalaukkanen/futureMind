<Card size="sm">
  <Col gap={2}>
    <Row>
      <Icon name="calendar" size="lg" />
      <Title value={title} size="sm" />
      <Spacer />
      <Caption value={displayDate} />
    </Row>
    <Row>
      <DatePicker name="timetable.date" defaultValue={selectedDate} variant="ghost" onChangeAction={{ type: "timetable.changeDate", payload: { date: selectedDate } }} />
    </Row>
  </Col>
  <Divider flush />
  <ListView>
    {items.length > 0 ? (
      items.map((item) => (
        <ListViewItem key={item.id} gap={3} onClickAction={{ type: "timetable.open", payload: { id: item.id } }}>
          <Box background={item.accent} radius="full" width={3} />
          <Col gap={0}>
            <Text value={item.title} size="sm" weight="semibold" maxLines={1} />
            <Caption value={`${item.time} • ${item.location}`} />
          </Col>
        </ListViewItem>
      ))
    ) : (
      <ListViewItem key="empty" gap={2}>
        <Icon name="info" size="sm" />
        <Text value="No events for this day" size="sm" color="secondary" />
      </ListViewItem>
    )}
  </ListView>
</Card>

